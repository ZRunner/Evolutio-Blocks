{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "evolutio/customer-reviews",
    "title": "Customer reviews slider",
    "category": "text",
    "description": "A carousel presenting customer reviews",
    "icon": "slides",
    "example": {
        "attributes": {
            "description": "Our customers are the best placed to describe the quality of our work."
        }
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "description": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "align": [
            "full"
        ],
        "html": false
    },
    "style": "file:./style-index.css",
    "editorScript": "file:./index.js",
    "viewScript": "file:./view.js",
    "render": "file:./render.php"
}